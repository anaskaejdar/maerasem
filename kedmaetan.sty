\providecommand\hugedropcommand[2]{\needspace{3\baselineskip}\let\LettrineFontHook\hugedropfont\lettrine[lines=5]{\ruh #1}{#2} }
\providecommand\bigdropcommand[2]{\needspace{3\baselineskip}\let\LettrineFontHook\bigdropfont\lettrine[lines=4]{\ruh #1}{#2} }
