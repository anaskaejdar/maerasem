\newcounter{versenumber}
\newenvironment{chantverses}{
  \setcounter{versenumber}{0}
  \noindent\begin{minipage}{\textwidth}
    \def\chantverse##1{##1}
    \renewcommand\chantverse[1]{
      \refstepcounter{versenumber}
      \speak{\nth{\theversenumber} Verse}\emph{##1}
    }
