\def\takefirstletter #1#2 {
  \unskip\ifcat\noexpand\relax\noexpand#1\def\next{#1{#2}\takefirstletter}\else
  \unskip\def\next{\takefirstlettercommand{#1}{#2}}\fi
  \unskip\next
}
\providecommand\storefirstletter{
  \unskip\let\takefirstlettercommand\empty
  \unskip\renewcommand\takefirstlettercommand[2]{
    \unskip\def\firstletter{##1}\def\firstletterremainder{##2}\ignorespaces
  }
  \unskip\takefirstletter
}

\providecommand\nhelper[1]{{\ruh #1}}
\providecommand\schelper[1]{\nhelper{\scshape #1}}
\providecommand\ithelper[1]{\nhelper{\itshape #1}}
\providecommand\bfhelper[1]{\nhelper{\bfseries #1}}
\providecommand\alschelper[1]{\schelper{\MakeLowercase{#1}}}
\providecommand\ctschelper[1]{{\addfontfeatures{SmallCapsFeatures={Letters={SmallCaps,UppercaseSmallCaps}}}\schelper{#1}}}
\providecommand\helper[1]{\alschelper{#1}}
\providecommand\respond[1]{{\setlength\parindent{0.5\parindent}\ \\\indent\indent\helper{ #1: }\indent}}
